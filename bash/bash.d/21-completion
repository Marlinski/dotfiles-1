if [ -d $HOME/.bash_completion.d/* ]; then
    for FILE in $HOME/.bash_completion.d/*; do
        source $FILE
    done
fi

if [ "$(uname -s)" == 'Darwin' -a -n "$(which brew)" ]; then
    [ -f $(brew --prefix)/etc/bash_completion ] && source $(brew --prefix)/etc/bash_completion
fi

